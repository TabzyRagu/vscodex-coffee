    "HTML Navigation Menu":{
        "prefix": "!cnavlist",
        "scope": "html",
        "body": [
            "<nav>",
            "   <ul id=\"navigation\">",
            "       <li><a href=\"#\">Home</a></li>",
            "       <li><a href=\"#\">About</a></li>",
            "       <li><a href=\"#\">Contact Us</a></li>",
